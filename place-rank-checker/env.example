# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://placerank:placerank123@postgres:5432/placerank
# SQLite (개발용)
# DATABASE_URL=sqlite:///./placerank.db

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# RabbitMQ Configuration (Celery)
# ============================================
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//

# ============================================
# Proxy Configuration
# ============================================
# 쉼표(,)로 구분된 프록시 목록
# 예시: http://user:pass@proxy1.com:8080,http://user:pass@proxy2.com:8080
PROXY_LIST=

# 또는 유료 프록시 서비스 사용
# Bright Data (추천)
# PROXY_LIST=http://username:password@brd.superproxy.io:22225

# Oxylabs
# PROXY_LIST=http://username:password@pr.oxylabs.io:7777

# ScraperAPI
# PROXY_LIST=http://scraperapi:YOUR_API_KEY@proxy-server.scraperapi.com:8001

# ============================================
# Scraper Configuration
# ============================================
MAX_WORKERS=5
RATE_LIMIT_DELAY=2.0  # 요청 간 지연 시간 (초)
MAX_RETRIES=3  # 최대 재시도 횟수
REQUEST_TIMEOUT=15.0  # 요청 타임아웃 (초)

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_LOG_LEVEL=info

# ============================================
# Security (프로덕션에서는 변경 필수!)
# ============================================
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY=your-api-key-change-this-in-production

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:8000
